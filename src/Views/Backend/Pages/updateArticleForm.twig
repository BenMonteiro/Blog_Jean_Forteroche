{% extends "Backend/Templates/template.twig" %}

{% block head_title %}
    Mettre à jour un article
{% endblock %}

{% block content %}
    <div id='updateArticleForm' class='bg-light mt-5 pt-5 pb-3'>
        <h1 class="text-center">Mettre à jour un article</h1>
        <form action='/ArticleAdmin/updateArticle?id={{ id }}' method="POST" class="offset-lg-2 col-lg-8 offset-1 col-10 my-5 pb-5">
            <div class="form-group">
                <label for="title">Titre du chapitre*</label>
                <input type="text" class="form-control" value="{{ title }}" id="title" name="title" required>
            </div>
            <div class="form-group">
                <label for="imageURL">URL de l'image d'illustration*</label>
                <input type="url" class="form-control" id="imageURL" name="imageURL" value="{{ image_url }}" required>
            </div>
            <div class="form-group">
                <label for="imageDescription">Description de l'image d'illustration*</label>
                <input type="text" class="form-control" id="imageDescription"name="imageDescription" value="{{ alt_image }}" required>
            </div>
            <div class="form-group">
                <label for="author">Auteur*</label>
                <select class="form-control" id="author" name="author">
                    {% for author in authorList %}
                        <option value="{{ author.id }}">{{ author.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="chapterDescription">Description du chapitre*</label>
                <input type="text" class="form-control" id="chapterDescription" name="chapterDescription" value="{{ description }}" required>
            </div>
            <div class="form-group">
                <label for="chapterText">Corps du texte*</label>
                <textarea class="form-control" id="chapterText" name="chapterText" rows="15" >{{ content }}</textarea>
            </div>
            <button type="submit" class="btn btn-primary float-right">Mettre à jour</button>
        </form>
    </div>
{% endblock %}