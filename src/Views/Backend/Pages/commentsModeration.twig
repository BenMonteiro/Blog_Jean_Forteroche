{% extends "Backend/Templates/template.twig" %}

{% block head_title %}
    Modération des commentaires
{% endblock %}

{% block content %}
    <div id="reportedCommentList">
        <h1 class="text-center mt-5 pt-5">Commentaires en attente de modération</h1>
        {{ include('Frontend/Templates/_notification.twig') }}
        <h4 class="text-center mt-3">
            {% if toModerate == 0 and reported == 0 %}Vous n'avez aucun commentaire en attente de modération
            {% else %}Vous avez <span class="text-primary"> {{ toModerate }} </span> commentaires à modérer dont <span class="text-danger">{{ reported }}</span> ont été reportés
            {% endif %}
        </h4>

        <ul class="list-unstyled mt-2 ml-3">
            {% for toModerate in toModerateList %}
                <li class="media">
                    <div class="media-body">
                        <h5 class="mt-0 mb-2">{{ toModerate.author }}</h5>
                        <div 
                            {% if toModerate.reported == false %} class="d-flex justify-content-between bg-light border border-primary col-11 ml-3 py-3" 
                            {% else %} class="d-flex justify-content-between bg-light border border-danger col-11 ml-3 py-3" 
                            {% endif %}>
                            <p class="col-8">{{ toModerate.comment|nl2br }}</p>
                            <div class="buttons offset-1 col-md-2">
                                <a class="btn btn-primary btn-block my-2" href="/commentAdmin/validate?id={{ toModerate.id }}" role="button">Valider le commentaire</a>
                                <a class="btn btn-danger btn-block" href="/commentAdmin/delete?id={{ toModerate.id }}" role="button">Supprimer</a>
                            </div>
                        </div>
                        <p class="mb-0 mt-0"><small class="text-muted">Le : {{ toModerate.creation_date|date("d-m-Y H:i:s") }}</small></p>
                    </div>
                </li>
                <hr class="mb-3 col-10">
            {% endfor %}
        </ul>
    </div>
{% endblock %}
