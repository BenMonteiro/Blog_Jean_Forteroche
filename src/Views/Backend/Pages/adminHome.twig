{% extends "Backend/Templates/template.twig" %}

{% block head_title %}
    Accueil
{% endblock %}

{% block content %}
    <div class="admin-home pt-5 mt-5 ml-2">
        <h1 class="py-5">Bonjour {{ admin|striptags }} !</h1>
        <div class="row d-flex mx-3 mt-5 pt-3">
            <div class="admin-dashboard col-xl-3 col-md-6 mb-3">
                <div class="card text-white bg-primary o-hidden h-100">
                    <div class="card-body">
                        <div class="card-body-icon">
                                <i class="far fa-newspaper"></i>
                        </div>
                        <div class="card-text mr-5">
                            <p class="stat text-center mb-0">{{ articleNb }}</p>
                            <p class="text-center">articles publiés</p>
                        </div>
                    </div>
                    <a class="card-footer text-white" href="/articleAdmin/index">
                        <span class="float-left">Modifier/Supprimer un article</span>
                        <span class="float-right"><i class="fas fa-angle-right"></i></span>
                    </a>
                </div>
            </div>

            <div class="admin-dashboard col-xl-3 col-md-6 mb-3">
                <div class="card text-white bg-info o-hidden h-100">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-pen-nib"></i>
                        </div>
                        <div class="card-text">
                            <p class="mt-4 mb-1 mb-0 text-center">Dernier article ajouté: 
                                <br/> Chapitre {{ lastArticle.chapter_number }}: {{ lastArticle.title|striptags }}
                                <br/>le {{ lastArticle.creation_date|date("d-m-Y") }}
                            </p>
                        </div>
                    </div>
                    <a class="card-footer text-white" href="/articleAdmin/addForm">
                        <span class="float-left">Ajouter un article</span>
                        <span class="float-right"><i class="fas fa-angle-right"></i></span>
                    </a>
                </div>
            </div>

            <div class="admin-dashboard col-xl-3 col-md-6 mb-3">
                <div class="card text-white bg-secondary o-hidden h-100">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-fw fa-comments"></i>
                        </div>
                        <div class="card-text mr-5">
                            <p class="stat text-center mb-0">{{ toModerateNumber }}</p>
                            <p class="text-center">commentaires en attente de modération</p>
                        </div>
                    </div>
                    <a class="card-footer text-white" href="/commentAdmin/moderation">
                        <span class="float-left">Details</span>
                        <span class="float-right"><i class="fas fa-angle-right"></i></span>
                    </a>
                </div>
            </div>

            <div class="admin-dashboard col-xl-3 col-md-6 mb-3">
                    <div class="card text-white bg-danger o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fas fa-fw fa-comments"></i>
                            </div>
                            <div class="secondary-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="card-text mr-5">
                                <p class="stat text-center mb-0">{{ reported }}</p>
                                <p class="text-center">commentaires signalés</p>
                            </div>
                        </div>
                        <a class="card-footer text-white" href="/commentAdmin/moderation">
                            <span class="float-left">Details</span>
                            <span class="float-right"><i class="fas fa-angle-right"></i></span>
                        </a>
                    </div>
                </div>
        </div>
    </div>
{% endblock %}