{% extends 'Frontend/Templates/template.twig' %}

{% block head_title %}
    Article
{% endblock %}

{% block content %}
    <article class="bg-light my-5 py-5">
        <a class="btn btn-outline-dark offset-md-8 col-md-3 offset-sm-3 col-sm-6 offset-2 col-8" href="#buttons" role="button">Se rendre à l'espace commentaire</a>
        {{ include('Frontend/Templates/_notification.twig') }}
        <h1 class="ml-3 mb-4 text-center text-dark">Chapitre {{ article.chapter_number }} : {{ article.title|striptags|nl2br }}</h1>
        <h5 class="text-center text-info mb-3">Ecrit par {{ article.name|striptags|nl2br }}</h5>
        <img src="{{ article.image_url|striptags|nl2br }}" class="offset-1 col-4 float-left mr-3 mt-5 mb-3" alt="{{ article.alt_image|striptags|nl2br }}"/>
        <div id="text" class="offset-1 col-10 text-justify my-5 pt-2">{{ article.content|striptags|nl2br }}</div>
        <p><small class="text-muted float-right mr-5">{% if article.date_of_update == null %}Publié le : {{ article.creation_date|date("d-m-Y H:i:s") }}
                {% else %}Mis à jour le : {{ article.date_of_update|date("d-m-Y H:i:s") }}
                {% endif %}
        </small></p>
    </article>

    <div id="buttons" class="text-center mb-5">
        <a class="previous btn btn-info btn-lg mr-3" href="/article/article?chapter={% if chapter == 1 %}{{ nbArticles }}
            {% else %}{{ chapter - 1 }}
            {% endif %}"
            role="button">
                Précédent
        </a>
        <a class="next btn btn-info btn-lg ml-3" 
            href="/article/article?chapter={% if chapter == nbArticles %}{{ 1 }} 
            {% else %}{{ chapter + 1 }}
            {% endif %}" 
            role="button">
                Suivant
        </a>
    </div>

    <div id="commentForm" class="pt-5 mt-5">
        <h3 class="offset-1 col-10 pl-3 mb-4">Laisser un commentaire</h3>

        <form id="add_comment" action="/comment/add?id={{ article.id }}&chapter={{ article.chapter_number }}" method="POST" class="offset-sm-1 col-sm-7 offset-1 col-10">
            <div class="form-group contactName">
                <label for="name">Nom*</label>
                <input type="text" class="form-control" id="name" name="comment[name]" required>
            </div>

            <div class="form-group">
                <label for="message">Commentaire*</label>
                <textarea class="form-control contactMessage" id="message" name="comment[message]" rows="5" required></textarea>
            </div>

            <button type="submit" class="btn btn-info mb-5">Laisser un commentaire</button>
        </form>
    </div>

    <div id="commentList">
        <h2 class="my-2 text-center">Derniers commentaires</h2>
        <p class="text-success text-center">{{ reportSuccess }}</p>
        <p class="text-center">{{ addCommentMessage }}</p>
        <ul class="list-unstyled mt-2 ml-3">
            {% for comment in commentList %}
                <li class="media">
                    <div class="media-body">
                        <h5 class="mt-0 mb-2">{{ comment.author|striptags|nl2br }}</h5>
                        <div class="d-flex justify-content-between bg-light col-11 ml-3 py-3">
                            <p class="col-8">{{ comment.comment|striptags|nl2br}}</p>
                            {% if comment.reported == false and comment.moderate == false %}
                            <a href="/comment/report?id={{ comment.id }}&chapter={{ article.chapter_number }}" class="badge badge-light" data-toggle="tooltip" title="Signaler ce commentaire">
                                <i class="fas fa-3x fa-exclamation-circle"></i>
                            </a>
                            {% endif %}
                        </div>
                        <p class="mb-0 mt-0"><small class="text-muted">Le : {{ comment.creation_date|date("d-m-Y à H:i:s") }}</small></p>
                    </div>
                </li>
                <hr class="mb-3 col-10">
            {% endfor %}
        </ul>
    </div>
{% endblock %}

