{% extends 'Frontend/Templates/template.twig' %}

{% block content %}
    <article class="pt-5 my-5">
        <h1 class="ml-3 mb-4 text-center">{{ title }}</h1>
        <img src="{{ image_url }}" class="offset-1 col-4 float-left mr-3 mb-2" alt="{{ alt_image }}"/>
        <div id="text" class="offset-1 col-10 text-justify">{{ content }}</div>
    </article>
    <div class="text-center mb-5">
        <a class="previous btn btn-info btn-lg mr-3" href="/blog/article?id={% if id == 1 %}{{ nbArticles }}
            {% else %}{{ id - 1 }}
            {% endif %}"
            role="button">
                Précédent
        </a>
        <a class="next btn btn-info btn-lg ml-3" 
            href="/blog/article?id={% if id == nbArticles %}{{ 1 }} 
            {% else %}{{ id + 1 }}
            {% endif %}" 
            role="button">
                Suivant
        </a>
    </div>
    <h3 class="ml-3 mb-3 ">Commentaires</h3>
    <h5><a class="ml-5 mb-5" href="#add_comment">Ajouter un commentaire</a></h5>
    <ul class="list-unstyled ml-3">
            {% for comment in commentList %}
            <li class="media">
                <div class="media-body">
                    <h5 class="mt-0 mb-2">{{ comment.author }}</h5>
                    <p>{{ comment.comment }}</p>
                    <p class="mb-0 mt-0"><small class="text-muted">Publié le : {{ comment.creation_date|date("d-m-Y H:i:s") }}</small></p>
                </div>
            </li>
            <hr class="mb-3 col-10">
            {% endfor %}
    </ul>

    <h3 class="text-center mt-5 mb-2">Laisser un commentaire</h3>
    <form id="add_comment" action='/contact/contactSuccess' method="POST" class="offset-lg-3 col-lg-6 offset-1 col-10">
        <div class="form-group contactName">
            <label for="name">Nom*</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="message">Message*</label>
            <textarea class="form-control contactMessage" id="message" name="message" rows="7"required></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-lg mb-3">Envoyer</button>
    </form>
{% endblock %}

