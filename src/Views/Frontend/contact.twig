{% extends "Frontend/template.twig" %}

{% block head_title %}
    Contact
{% endblock %}
{% block content %}
<div id='contactPage' class='pb-5'>
    <form action='' method="POST" class="offset-lg-3 col-lg-6 offset-1 col-10 mt-5 pt-5">
        <div class="form-group">
            <label for="name">Nom</label>
            <input type="text" class="form-control" id="name" placeholder="Bond">
        </div>
        <div class="form-group">
            <label for="surname">Pr√©nom</label>
            <input type="surname" class="form-control" id="surname" placeholder="James">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="jamesbond007@exemple.com">
        </div>
        <div class="form-group">
            <label for="message">Message</label>
            <textarea class="form-control" id="message" rows="7" placeholder="My name is Bond, James Bond!"></textarea>
        </div>
        <button type="submit" class="btn btn-primary float-right">Envoyer</button>
    </form>
</div>
{% endblock %}
